@model IEnumerable<Project4.Card>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CardFront)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardBack)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deck.DeckName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CardFront)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CardBack)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Deck.DeckName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
